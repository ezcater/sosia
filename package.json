{
  "name": "sosia",
  "version": "1.0.0",
  "description": "Sosia is a visual regression tool, powered by component snapshots",
  "main": "dist/sosia.umd.js",
  "module": "dist/sosia.es5.js",
  "typings": "dist/types/sosia.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezcater/sosia.git"
  },
  "keywords": [
    "visual",
    "regression",
    "react",
    "component",
    "snapshot",
    "puppeteer",
    "jest",
    "coverage"
  ],
  "author": "craigcav",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ezcater/sosia/issues"
  },
  "homepage": "https://github.com/ezcater/sosia#readme",
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": false
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "prettier": "^1.14.3",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  }
}
