{
  "name": "sosia",
  "version": "1.0.0",
  "description": "Sosia is a visual regression tool, powered by component snapshots",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezcater/sosia.git"
  },
  "keywords": [
    "visual",
    "regression",
    "react",
    "component",
    "snapshot",
    "puppeteer",
    "jest",
    "coverage"
  ],
  "author": "craigcav",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ezcater/sosia/issues"
  },
  "homepage": "https://github.com/ezcater/sosia#readme",
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": false
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "build": "tsc --module commonjs",
    "package:any": "microbundle --format cjs --sourcemap false",
    "package:sosia": "npm run package:any -- --cwd packages/sosia",
    "package:target": "npm run package:any -- --cwd packages/sosia-puppeteer",
    "package:source": "npm run package:any -- --cwd packages/sosia-markdown",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@types/react": "^16.7.20",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "microbundle": "^0.9.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  }
}
